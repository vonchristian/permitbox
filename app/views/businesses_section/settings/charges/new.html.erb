<%= simple_form_for @charge, url: :businesses_section_charges do |f| %>
  <%= f.input :locality_id, input_html: { value: current_locality.id }, as: :hidden %>
  <%= f.input :name %>
  <%= f.input :amount %>
  <%= f.input :revenue_account_id, collection: Accounting::Revenue.all.map{|a| [a.name, a.id] } %>
  <%= f.input :charge_scope, collection: Charge.charge_scopes.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>
  <%= f.submit "Create Charge" %>
<% end %>

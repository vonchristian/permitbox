<%= simple_form_for [@line_of_business_category, @line_of_business], url: :businesses_section_line_of_business_category_line_of_business do |f| %>
  <%= f.input :name %>
  <%= f.input :fee_amount %>
  <%= f.input :line_of_business_category_id, input_html: { value: @line_of_business_category.id }, as: :hidden %>
  <%= f.input :locality_id, input_html: { value: current_locality.id }, as: :hidden %>
  <%= f.input :competetive_index_category_id, collection: CompetetiveIndexCategory.all.map{|a| [a.name, a.id] } %>
  <%= f.submit "Create Line Of Business" %>
<% end %>

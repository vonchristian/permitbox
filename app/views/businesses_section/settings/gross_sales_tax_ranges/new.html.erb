<%= simple_form_for [@business_tax_category, @gross_sales_tax_range], url: :businesses_section_business_tax_category_gross_sales_tax_ranges do |f| %>
  <%= f.input :minimum_gross_sale %>
  <%= f.input :maximum_gross_sale %>
  <%= f.input :tax_type, collection: BusinessTaxCategories::GrossSalesTaxRange.tax_types.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>
  <%= f.input :tax_amount, label: "Tax amount" %>
  <%= f.input :tax_rate %>
  <%= f.input :tax_rate_for_excess %>
  
  <%= f.input :locality_id, input_html: { value: current_locality.id }, as: :hidden %>

  <%= f.submit "Create Gross Sales Tax Range" %>
<% end %>

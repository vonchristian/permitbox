<div class="row">
  <div class="col-md-4">
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
      </div>
      <div class="card-body">
        <%= simple_form_for @sanitary_inspection_config, url: :businesses_section_sanitary_inspection_configs do |f| %>
          <%= f.input :minimum_area %>
          <%= f.input :maximum_area %>
          <%= f.input :fee_amount %>
          <%= f.input :revenue_account_id, collection: Accounting::Revenue.all.map{|a| [a.name, a.id] }, input_html: { id: "revenueAccountSelect" } %>
          <%= f.input :locality_id, input_html: { value: current_locality.id }, as: :hidden %>
          <%= f.submit "Save", class: "btn btn-danger float-right", data: { disable_with: "Processing..." } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

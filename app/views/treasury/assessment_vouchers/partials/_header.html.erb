<%= link_to treasury_assessment_voucher_path(voucher) do %>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <p><%= voucher.name.try(:upcase) %></p>
        </div>
        <div class="col-md-6">
            <%= number_to_currency voucher.voucher_amounts.total %><br>
            <small> ASSESSED </small>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="card">
  <div class="card-header">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
         <%= link_to 'Profile', real_property_path(@real_property), class: "nav-link #{'active' if current_page?(real_property_path(@real_property))}", id: "real-property-profile-tab" %>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="messages-tab" data-toggle="tab" href="#messages" role="tab" aria-controls="messages" aria-selected="false">Messages</a>
      </li>
       <li class="nav-item">

        <%= link_to 'Encumberances', real_property_encumberances_path(@real_property), class: "nav-link #{'active' if current_page?(real_property_encumberances_path(@real_property))}", id: "real-property-encumberances-tab" %>
      </li>
      <li class="nav-item">

        <%= link_to 'Settings', real_property_settings_path(@real_property), class: "nav-link #{'active' if current_page?(real_property_settings_path(@real_property))}", id: "real-property-settings-tab" %>
      </li>
    </ul>
  </div>
  <div class="card-body">
  <div class="tab-content">
    <% if current_page? real_property_path(@real_property) %>
      <%= render 'real_properties/partials/profile' %>
    <% end %>
    <% if current_page? real_property_settings_path(@real_property) %>
      <%= render 'real_properties/partials/settings' %>
    <% end %>
    <% if current_page? real_property_encumberances_path(@real_property) %>
      <%= render 'real_properties/partials/encumberances' %>
    <% end %>

  </div>
</div>
</div>

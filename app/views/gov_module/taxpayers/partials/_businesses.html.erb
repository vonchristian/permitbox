<div class='row'>
  <div class='col-md-3'>
    <h3 class="title-up"> Businesses </h3>
  </div>
  <div class='col-md-6'>
  </div>
  <div class='col-md-3'>
    <% if policy(:business_permit_application).new? %>
      <%= link_to new_gov_module_permit_applications_business_permit_application_path(applicant_id: @taxpayer.id) do %>
        <span class="btn btn-primary float-right" data-toggle="tooltip" title="New Business">
          <i class="fa fa-plus-circle"></i> New Application
        </span>
      <% end %>
    <% end %>
  </div>
</div>
<br>
<div class='table table-responsive'>
  <table class='table table-hover table-striped'>
    <thead>
      <tr>
        <th> Business Name </th>
        <th> Taxpayer </th>
        <th> Barangay </th>
        <th> Permit Status </th>
        <th> 
      </tr>
    </thead>
    <tbody>
      <% @businesses.each do |business| %>
        <tr>
          <td><%= link_to business.name.upcase,  gov_module_business_path(business) %></td>
          <td></td>
          <td><%= business.current_location_barangay_name %></td>
          <td>
            <span class="badge bg-<%= business.badge_color(from_date: Date.current.beginning_of_year, to_date: Date.current.end_of_year) %>"><%= business.business_permit_status(from_date: Date.current.beginning_of_year, to_date: Date.current.end_of_year).try(:titleize) %></span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%==pagy_bootstrap_nav(@pagy) %>
</div>
   
<div class="card">
  <div class="card-header">
    <h3 class="card-title"> Taxpayer Info </h3>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <span data-toggle="tooltip" title="Change Photo">
          <%=image_tag(@taxpayer.avatar, height: 120, width: 120, class: "img-square") %>
        </span>
      </div>
      <div class="col-md-8">
        <b><%= @taxpayer.full_name %></b><br>
        <i class="fa fa-phone"></i><br>
        <i class="fa fa-map-marker"></i>
        <%= link_to edit_gov_module_taxpayer_path(@taxpayer) do %>
          <span class="btn btn-outline-warning btn-sm" data-toggle="tooltip" title="Edit Taxpayer Info">
            <i class="fa fa-edit"></i>Edit Taxpayer
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>

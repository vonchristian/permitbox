<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-md-9">
        <h3 class="card-title"> Tricycles </h3>
      </div>
      <div class="col-md-3">
        <%= link_to new_gov_module_permit_applications_tricycle_permit_application_path(taxpayer_id: @taxpayer.id) do %>
          <span class="btn btn-outline-primary float-right" data-toggle="tooltip" title="New Tricycle">
            <i class="fa fa-plus-circle"></i> New Application
          </span>
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <% @tricycles.each do |tricycle| %>
        <%= render 'gov_module/tricycles/partials/header', tricycle: tricycle %>
        <hr>
      <% end %>
    </div>
  </div>
</div>


    <div class="row">
      <div class="col-md-9">
        <h3 class="title-up"> Tricycles </h3>
      </div>
      <div class="col-md-3">
        <%= link_to 'New Application', new_gov_module_permit_applications_tricycle_permit_application_path(taxpayer_id: @taxpayer.id), class: 'btn btn-primary float-right' %>
         
      </div>
    </div>
    <div class='table table-responsive'>
      <table class='table table-striped table-hover'>
        <thead>
          <tr>
            <th> Make and Model </th>
            <th> Plate Number </th>
            <th> Organization </th>
            <th> MTOP # </th>
        </thead>
        <tbody>
          <% @tricycles.each do |tricycle| %>
            <tr>
              <td><%= link_to tricycle.make_and_model, gov_module_tricycle_path(tricycle) %></td>
              <td><%= tricycle.plate_number %></td>
              <td><%= tricycle.tricycle_organization_abbreviated_name %></td>
              <td><%= tricycle.mtop_number %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

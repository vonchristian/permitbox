<div class="card">
  <div class="card-body">
    <%= render 'gov_module/businesses/partials/header', business: @business %>
  </div>
</div>
<div class="card">
  <div class="card-body">
<% BusinessTaxCategory.all.each do |business_tax_category| %>
  <%= simple_form_for @business, url: :gov_module_business_business_tax_category do |f| %>
  <%= f.input :business_tax_category_id, input_html: { value: business_tax_category.id }, as: :hidden %>
  <div class="row">
    <div class="col-md-6">
      <%= business_tax_category.title %>
    </div>
    <div class="col-md-6">
      <% if @business.business_tax_category == business_tax_category %>
        <span class="btn float-right">
          <i class="fa fa-toggle-on fa-2x text-success"></i>
        </span>
      <% else %>
        <%= button_tag(class: "btn float-right") do %>
          <i class="fa fa-toggle-off fa-2x"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <br>
<% end %>
<% end %>

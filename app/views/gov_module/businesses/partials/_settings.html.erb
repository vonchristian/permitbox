<div class="card">
  <div class="card-header">
    <h3 class="card-title"> Settings </h3>
  </div>
  <div class="card-body">
    <% if business.all_vouchers.blank? %>
       <%= link_to 'Delete Business', gov_module_business_path(business), method: :delete, class: "btn btn-danger" %>
    <% else %>
      <span class="text-danger"> Business cannot be deleted. </span>
    <% end %>
  </div>
</div>
<% if (Businesses::ClosingPolicy.new(business: @business, user: current_user)).new? %>
<%= link_to 'Close Business', new_gov_module_business_closing_path(@business), class: 'btn btn-danger' %>
<% elsif @business.closed_at.present? %>
  <p> Closing Date <%= @business.closed_at.strftime('%B %e %Y') %></p>

<% end %>

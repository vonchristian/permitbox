<% business.voucher_amounts.non_discount_amounts.without_voucher.order(:name).each do |voucher_amount| %>
  <div class="row min-margin">
    <div class="col-md-6">
      <span class="card-text">
        <%= voucher_amount.name %>
      </span>
    </div>
    <div class="col-md-2">
      <%=link_to gov_module_business_voucher_amount_path(business_id: business.id, id: voucher_amount.id), method: :delete do %>
       <span class="text-danger" data-toggle="tooltip" title="Remove"><i class="fa fa-times mr-2"></i> </span>
      <% end %>
      <%=link_to edit_gov_module_business_voucher_amount_path(business_id: business.id, id: voucher_amount.id) do %>
       <span class="text-warning" data-toggle="tooltip" title="Edit"><i class="fa fa-edit"></i> </span>
      <% end %>
    </div>

    <div class="col-md-4">
      <span class="float-right">
        &nbsp; &nbsp;<%= number_to_currency voucher_amount.amount %>
      </span>
    </div>
  </div>
<% end %>
<hr>
<div class="row">
  <div class="col-md-6">
    <p> SUB-TOTAL </p>
  </div>
  <div class="col-md-6">
    <p><b><span class="float-right"> <%= number_to_currency business.voucher_amounts.non_discount_amounts.without_voucher.total %> </span></b></p>
  </div>
</div>
<small class="text-danger">DISCOUNTS </small>
<% business.voucher_amounts.discount_amounts.without_voucher.order(:name).each do |voucher_amount| %>
  <div class="row min-margin text-danger">
    <div class="col-md-6">
      <span class="card-text">
        <%= voucher_amount.name %>
      </span>
    </div>
    <div class="col-md-2">
      <%=link_to gov_module_business_voucher_amount_path(business_id: business.id, id: voucher_amount.id), method: :delete do %>
       <span class="text-danger" data-toggle="tooltip" title="Remove"><i class="fa fa-times mr-2"></i> </span>
      <% end %>
      <%=link_to edit_gov_module_business_voucher_amount_path(business_id: business.id, id: voucher_amount.id) do %>
       <span class="text-warning" data-toggle="tooltip" title="Edit"><i class="fa fa-edit"></i> </span>
      <% end %>
    </div>

    <div class="col-md-4">
      <span class="float-right">
        <%= number_to_currency voucher_amount.amount %>
      </span>
    </div>
  </div>
<% end %>
<hr>
<div class="row">
  <div class="col-md-5">
    <h3 class="title-up">TOTAL</h3>
  </div>
  <div class="col-md-5">
    <h3 class="title-up"><span class="float-right"> <%= number_to_currency business.voucher_amounts.without_voucher.total_less_discount %> </span></h3>
  </div>
</div>
<hr>

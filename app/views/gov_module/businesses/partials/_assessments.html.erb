
<div class='table table-responsive'>
  <table class='table table-striped table-hover'>
    <thead>
      <tr>
        <th> Date </th>
        <th> Employee </th>
        <th> Total </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% business.all_vouchers.each do |voucher| %>
        <tr>
          <td><%= link_to voucher.date.strftime('%B %e, %Y'), gov_module_voucher_path(voucher) %></td>
          <td><%= voucher.preparer_full_name %></td>
          <td><%= number_to_currency voucher.voucher_amounts.credit.total %></td>
          <td>
           <% if !voucher.paid? %>
              <%= link_to gov_module_voucher_path(voucher), method: :delete do %>
                <span class="text-danger" title="Delete" data-toggle="tooltip"> <i class="fa fa-trash"></i> </span>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header">
          <%=render 'gov_module/businesses/partials/header', business: @business %>
        </div>
        <div class="card-body">
          <%= simple_form_for [@business, @gross_sale], url: :gov_module_business_gross_sales do |f| %>
          <strong>Gross Sales Details</strong>
            <%= f.input :amount %>

            <p class="text-muted"> Preceding year this gross sales </p>
            <%= f.input :calendar_year, input_html: { class: "datepicker" } %>
            <%= f.input :essential, as: :boolean %>
            <%= f.input :business_id, input_html: { value: @business.id }, as: :hidden %>
            <%= f.submit "Save Gross Sale", class: "btn btn-primary float-right" %>
          <% end %>
          </div>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> tricycle Permit Details </h3>
      </div>
      <div class="card-body">
        <div class="row min-margin">
          <div class="col-md-4">
            tricycle
          </div>
          <div class="col-md-8">

            <%= @tricycle_permit.plate_number %> - <%= @tricycle_permit.permitable.try(:taxpayers_full_name) %>

          </div>
        </div>
        <div class="row min-margin">
          <div class="col-md-4">
            Permit Type
          </div>
          <div class="col-md-8">
            <%= @tricycle_permit.permit_type.try(:titleize) %>
          </div>
        </div>
        <div class="row min-margin">
          <div class="col-md-4">
            Permit Number
          </div>
          <div class="col-md-8">
            <%= @tricycle_permit.permit_number %>
          </div>
        </div>
        <div class="row min-margin">
          <div class="col-md-4">
            Plate Number
          </div>
          <div class="col-md-8">
            <%= @tricycle_permit.plate_number %>
          </div>
        </div>
        <div class="row min-margin">
          <div class="col-md-4">
            Approval Date
          </div>
          <div class="col-md-8">
            <%= @tricycle_permit.approval_date.strftime('%B %e, %Y') %>
          </div>
        </div>

        <div class="row min-margin">
          <div class="col-md-4">
            Expiry Date
          </div>
          <div class="col-md-8">
            <%= @tricycle_permit.expiry_date.strftime('%B %e, %Y') %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-6">
            <h3 class="card-title">Signatories </h3>
          </div>
          <div class="col-md-5">
            <%= link_to new_gov_module_tricycle_permit_permit_signatory_path(@tricycle_permit) do %>
              <span class="btn btn-outline-primary btn-sm float-right" data-toggle="tooltip" title="Add Permit Signatory"><i class="fa fa-user-plus"></i>Add</span>
            <% end %>
          </div>
        </div>
        <% @tricycle_permit.permit_signatories.each do |signatory| %>
        <div class="row min-margin">
          <div class="col-md-4">
            Signatory
          </div>
          <div class="col-md-6">
            <%= signatory.full_name %>
          </div>
          <div class="col-md-2">
            <%= link_to gov_module_tricycle_permit_permit_signatory_path(tricycle_permit_id: @tricycle_permit.id, id: signatory.id), method: :delete do %>
              <span class="text-danger" title="Remove Signatory" data-toggle="tooltip"><i class="fa fa-times"></i>
            <% end %>
          </div>
        </div>
        <% end %>
        <hr>
        <%= link_to edit_gov_module_tricycle_permit_path(@tricycle_permit) do %>
          <span class=" btn btn-outline-warning" data-toggle="tooltip" title="Edit Permit"><i class="fa fa-edit"></i>Edit Permit</span>
        <% end %>
        <%= link_to 'View PDF', gov_module_tricycle_permit_path(@tricycle_permit, format: 'pdf'), class: "btn btn-outline-primary float-right" %>

      </div>
    </div>
  </div>
</div>

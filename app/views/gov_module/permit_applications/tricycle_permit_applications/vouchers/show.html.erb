
<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-8">
            <h3 class="card-title"> Assessment Details </h3>
          </div>
          <div class="col-md-4">
            <%= link_to gov_module_voucher_path(@voucher, format: 'pdf') do %>
              <span class="btn btn-outline-primary float-right" data-toggle="tooltip" title="View PDF"><i class="fa fa-file-pdf"></i> View PDF </span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row min-margin">
          <div class="col-md-4 offset-md-1">
            Tricycle
          </div>
          <div class="col-md-6">
            <%= @tricycle_permit_application.tricycle.plate_number %> - <%= @tricycle_permit_application.tricycle.taxpayers_full_name %>
          </div>
        </div>
        <div class="row min-margin">
          <div class="col-md-4 offset-md-1">
            Assessment Date
          </div>
          <div class="col-md-6">
            <%= @voucher.date.strftime("%B %e, %Y") %>
          </div>
        </div>
        <div class="row min-margin">
          <div class="col-md-4  offset-md-1">
            Application Number
          </div>
          <div class="col-md-6">
            <%= @tricycle_permit_application.application_number %>
          </div>
        </div>
        <hr>
        <% @voucher.voucher_amounts.credit.each do |voucher_amount| %>
          <div class="row min-margin">
            <div class="col-md-1">
            </div>
            <div class="col-md-7">
              <%= voucher_amount.name %>
            </div>
            <div class="col-md-3">
              <span class="float-right">
                <%= number_to_currency voucher_amount.amount %>
              </span>
            </div>
            <div class="col-md-1">
            </div>
          </div>
        <% end %>
        <hr>
        <% @voucher.voucher_amounts.credit.discount_amounts.each do |voucher_amount| %>
        <div class="row">
          <div class="col-md-1">
          </div>
          <div class="col-md-7">
            <%= voucher_amount.name %>
          </div>
          <div class="col-md-3">
            <span class="float-right">
              <%= number_to_currency voucher_amount.amount %>
            </span>
          </div>
          <div class="col-md-1">
          </div>
        </div>
        <br>
        <% end %>
        <div class="row">
          <div class="col-md-1">
          </div>
          <div class="col-md-7">
            <h3 class="card-title"> Total </h3>
          </div>
          <div class="col-md-3">
            <h3 class="card-title">
              <span class="float-right">
                <%= number_to_currency @voucher.voucher_amounts.total %>
              </span>
            </h3>
          </div>
          <div class="col-md-1">
          </div>
        </div>
        <% if current_user.collection_officer? %>
          <hr>
          <h3 class="card-title"> Payment Channels </h3>
          <br>
          <strong><i class="fa fa-credit-card"></i> Credit Card </strong>
          <p class="description"> Pay through credit card</p>
          <hr>

          <div class="row">
            <div class="col-md-8">
              <strong><i class="fa fa-building"></i> Local Treasury </strong>
              <p class="description"> Pay through Local Treasury.</p>
            </div>
            <div class="col-md-4">
              <% if @voucher.unpaid? %>
                <%= link_to 'Accept Payment', new_assessment_payment_path(@voucher), class: "btn btn-primary" %>
              <% else %>
                <span class="badge bg-success"> Paid </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h3 class="card-title"> Application Details </h3>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
      </div>
      <div class="col-md-5">
        <%= simple_form_for @tricycle_permit_application, url: :gov_module_permit_applications_tricycle_permit_applications do |f| %>
          <%= f.input :application_date, as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :application_number %>

          <%= f.input :application_type, collection: PermitApplication.application_types.keys.to_a.map{ |a| [a.titleize, a] }, as: :radio_buttons %>
          <%= f.input :mtop_number, label: "MTOP Number", input_html: { value: @tricycle.mtop_number } %>
          <%= f.input :plate_number, input_html: { value: @tricycle.plate_number } %>
          <%= f.input :make, label: "Make/Brand", placeholder: 'ex. Honda', input_html: { value: @tricycle.make } %>
          <%= f.input :tricycle_model, input_html: { value: @tricycle.tricycle_model } %>
          <%= f.input :color, input_html: { value: @tricycle.color } %>
          <%= f.input :tricycle_id, input_html: { value: @tricycle.id }, as: :hidden %>
          <% if @tricycle.taxpayer_owners.present? %>
            <%= f.input :taxpayer_id, collection: @tricycle.taxpayer_owners.map{ |taxpayer| taxpayer.full_name } %>
          <% else %>
            <%= f.input :taxpayer_id, input_html: { value: @taxpayer.id }, as: :hidden %>
          <% end %>

          <%= f.input :tricycle_organization_id, collection: current_locality.tricycle_organizations.all.map{ |a| [a.abbreviated_name, a.id] }, default: @tricycle.tricycle_organization %>
          <%= f.input :locality_id, input_html: { value: current_locality.id }, as: :hidden %>
          <%= f.input :cart_id, input_html: { value: current_cart.id }, as: :hidden %>


          <%= f.input :account_number, input_html: { value: SecureRandom.uuid } %>
          <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>

          <%= f.submit "Save Application", class: "btn btn-primary float-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $("#gov_module_tricycles_permit_application_tricycle_organization_id").select2({
      theme: "bootstrap"
    });

    $("#gov_module_tricycles_permit_application_barangay_id").select2({
      theme: "bootstrap"
    });


    $("#gov_module_tricycles_permit_application_street_id").select2({
      theme: "bootstrap"
    });
  });
</script>

<%= simple_form_for [@tricycle, @location], url: :gov_module_tricycle_location do |f| %>
  <%= f.input :complete_address %>
  <%= f.input :street_id, collection: current_locality.streets.map{ |street| [street.name, street.id] } %>
  <%= f.input :barangay_id, collection: current_locality.barangays.map{ |barangay| [barangay.name, barangay.id] } %>
  <%= f.input :locality_id, input_html: { value: current_locality.id }, as: :hidden %>
  <%= f.input :province_id, input_html: { value: current_locality.province_id }, as: :hidden %>
  <%= f.submit "Update Address" %>
<% end %>

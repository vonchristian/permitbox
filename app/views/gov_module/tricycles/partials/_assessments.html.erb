
    <h3 class='title-up'> Assessments </h3>
    <div class='table table-responsive'>
      <table class='table table-hover table-striped'>
        <thead>
          <tr>
            <th> Date </th>
            <th> Particulars </th>
            <th> Total Amount </th>
            <th> Status </th>
          </tr>
        </thead>
        <tbody>
          <% @vouchers.each do |voucher| %>
            <tr>
              <td><%= link_to voucher.date.strftime('%B %e, %Y'), gov_module_voucher_path(voucher) %></td>
              <td><%= voucher.description %></td>
              <td><%= number_to_currency voucher.voucher_amounts.credit.total %></td>
              <td>
                <% if voucher.paid? %>
                  <span class='badge bg-success'> PAID </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>


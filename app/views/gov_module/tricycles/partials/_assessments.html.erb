
<% if @vouchers.present? %>
    <% @vouchers.each do |voucher| %>
      <%= link_to gov_module_voucher_path(voucher) do %>
        <div class="row">
          <div class="col-md-4">
            <%= voucher.date.strftime("%B %e, %Y") %>
          </div>
          <div class="col-md-3">
            <%= voucher.preparer_full_name %>
          </div>


            <div class="col-md-4">
              <span class="float-right">
                <%=number_to_currency voucher.voucher_amounts.sum(&:amount) %>
              </span>
            </div>
        </div>
      <% end %>
    <% end %>
<% end %>

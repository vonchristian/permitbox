<div class='container'>
  <div class='card'>
    <div class='card-body'>
      <div class='row'>
        <div class='col-md-3'>
          <h3 class='title-up'> Tricycles </h3>
        </div>
        <div class='col-md-9'>
          <%=form_tag gov_module_tricycles_path, method: :get, id: "search-form" do %>
            <div class="input-group">
              <%= text_field_tag :search, params[:search], class: "search-query form-control border-input", placeholder: "Search tricycle...", type: "search" %>
              <span class="input-group-btn">
                <%= button_tag(type: 'submit', class: "btn btn-outline-secondary") do %>
                  <i class="fa fa-search"></i> Search
                <% end %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
      <br>
      <div class="table table-responsive">
        <div class='table table-responsive'>
            <table class='table table-striped table-hover'>
              <thead>
                <tr>
                  <th> Taxpayer </th>
                  <th> Make and Model </th>
                  <th> Plate Number </th>
                  <th> Organization </th>
                  <th> MTOP # </th>
              </thead>
              <tbody>
                <% @tricycles.each do |tricycle| %>
                  <tr>
                    <td><%= link_to tricycle.taxpayer_full_name, gov_module_tricycle_path(tricycle) %></td>
                    <td><%= link_to tricycle.make_and_model, gov_module_tricycle_path(tricycle) %></td>
                    <td><%= tricycle.plate_number %></td>
                    <td><%= tricycle.tricycle_organization_abbreviated_name %></td>
                    <td><%= tricycle.mtop_number %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%==pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>
    </div>
    </div>

<%= simple_form_for @cash_account, url: :gov_module_employee_cash_accounts do |f| %>
	<div class="modal-body">
		<h4 class="card-title">New Cash Account</h4>
		<hr>
	  <%= f.input :cash_account_id, collection: Accounting::Asset.all.map{|a| [a.name, a.id] }  %>
    <%= f.input :locality_id, input_html: { value: current_locality.id }, as: :hidden %>
    <%= f.input :default_account %>
	</div>
	<div class="modal-footer">
	  <%= f.submit "Set Cash Account", class: 'btn btn-danger float-right' %>
	</div>
<% end %>

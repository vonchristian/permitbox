<%= simple_form_for @charge, url: :gov_module_bplo_settings_charges do |f| %>
  <%= f.input :charge_scope, collection: Charge.charge_scopes.>
  <%= f.input :name %>
  <%= f.input :amount %>
  <%= f.input :revenue_account_id, collection: current_locality.accounts.revenues.map{|a| [a.name, a.id] } %>
  <%= f.input :>
  <%= f.submit 'Create Charge' %>
<% end %>

<%= simple_form_for [@line_of_business, @charge], url: :gov_module_bplo_settings_line_of_business_charges do |f| %>
  <%= f.input :name %>
  <%= f.input :amount %>
  <%= f.input :revenue_account_id, collection: current_locality.accounts.revenues.map { |revenue| [ revenue.name, revenue.id] } %>
  <%= f.submit "Create Charge" %>
<% end %>

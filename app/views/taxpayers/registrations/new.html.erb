<div class="container">
  <div class="card">
    <div class="card-header bg-warning">
      <h3 class="card-title"> Sign Up for an Account </h3>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <h3>Business Permits</h3>
          <ul>
            <li>Online Business Permit Applications</li>
            <li>Pay Fees and Taxes Online</li>
            <li>Print Permits and Licenses</li>
          </ul>
          <hr>
          <h3 class="card-title"> Real Properties </h3>
        </div>
        <div class="col-md-6">
          <%= simple_form_for @taxpayer, url: :taxpayers do |f| %>
            <%= f.input :account_number, input_html: { value: SecureRandom.uuid } %>
            <%= f.input :first_name %>
            <%= f.input :middle_name %>
            <%= f.input :last_name %>
            <%= f.input :email %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>
            <%= f.submit "Sign Up", class: "btn btn-warning float-right" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
